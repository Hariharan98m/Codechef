#include<stdio.h>
using namespace std;
int main(){
	long int n,t;
	long int u,l,c,h,x,uu,ll,y,q;
	char a[1000000],b[1000000];
	scanf("%d",&t);
	while(t--){
		scanf("%d",&n);
		scanf("%s\n%s",a,b);
		u=0;l=0;c=0;h=0;x=0;y=0;uu=0;ll=0;q=0;
		for(int i=0;i<n;i++){
			if(a[i]=='*'){
				if(u==1||y==1){
					c++;
					x=1;
					y=0;
					q=0;
				}
				else
					y=1;
				u=1;
				uu=1;
			}
			else
				u=0;
			if(b[i]=='*'){
				if((l==1&&x==0)||(x==0&&q==1)){
					c++;
					q=0;
					y=0;
				}
				else if(x==0)
					q=1;
				l=1;
				ll=1;
			}
			else
				l=0;
			if(uu==1&&ll==1&&h!=1){
				h=1;
			}
			x=0;
		}
		c=c+h;
		printf("%d\n",c);
	}
}

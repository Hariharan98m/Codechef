#include<stdio.h> //Kartik
using namespace std;
int main(){
	int n,t;
	int u,l,c,h,x,uu,ll;
	char a[100000],b[100000];
	scanf("%d",&t);
	while(t--){
		scanf("%d",&n);
		scanf("%s\n%s",a,b);
		u=0;l=0;c=0;h=0;x=0;uu=0;ll=0;
		for(int i=0;i<n;i++){
			if(a[i]=='*'){
				if(u==1){
					c++;
					x=1;
				}
				u=1;
				uu=1;
			}
			else
				u=0;
			if(b[i]=='*'){
				if(l==1&&x==0)
					c++;
				l=1;
				ll=1;
			}
			else
				l=0;
			if(uu==1&&ll==1)
				h=1;
			x=0;
		}
		printf("%d\n",c+h);
	}
}
